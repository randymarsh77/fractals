{
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "env": {
      "browser": true,
      "node": true
  },
  "plugins": [
    "react"
  ],
  "extends": "airbnb",
  "rules": {
      "no-tabs": 0,
      "no-plusplus": 0,
      "new-cap": ["error", { "capIsNew": false }],
      "indent": [2, "tab"]
  }
}
